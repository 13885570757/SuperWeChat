<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_bg">

    <include
        android:id="@+id/layout_title"
        layout="@layout/view_title_bar"/>

    <cn.ucai.superwechat.widget.MFViewPager
        android:id="@+id/layout_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title">
    </cn.ucai.superwechat.widget.MFViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d6dcdc"/>

        <cn.ucai.superwechat.widget.DMTabHost
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></cn.ucai.superwechat.widget.DMTabHost>

        <cn.ucai.superwechat.widget.DMTabTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </cn.ucai.superwechat.widget.DMTabTextView>

        <cn.ucai.superwechat.widget.DMTabButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></cn.ucai.superwechat.widget.DMTabButton>

    </LinearLayout>


</RelativeLayout>